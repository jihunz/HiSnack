<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="product">
	<sql id="search">
		<where>
			
		</where>
	</sql>

	<insert id="add">
		INSERT INTO product
		VALUES(NULL, #{name}, #{price}, #{manufacture})
	</insert>
	<select id="item" resultType="Product">
		SELECT *
		FROM product
		WHERE code=#{code}
	</select>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM product
		<include refid="search" />
	</select>
	<select id="list" resultType="Faq">
		SELECT *
		FROM product
		<include refid="search" />
		LIMIT #{offset}, #{perPage}
	</select>
	<delete id="delete">
		DELETE FROM product
		WHERE code=#{code}
	</delete>
	<update id="update">
		UPDATE product
		SET
		name=#{name},
		price=#{price},
		manufacture=#{manufacture},
		WHERE code=#{code}
	</update>
</mapper>