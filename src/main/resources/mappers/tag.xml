<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="tag">
	<sql id="search">
		<where>
			
		</where>
	</sql>

	<insert id="add">
		INSERT INTO tag
		VALUES(NULL, #{content})
	</insert>
	<select id="item" resultType="Tag">
		SELECT *
		FROM tag
		WHERE code=#{code}
	</select>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM tag
		<include refid="search" />
	</select>
	<select id="list" resultType="Tag">
		SELECT *
		FROM tag
	</select>
	<delete id="delete">
		DELETE FROM tag
		WHERE code=#{code}
	</delete>
	<update id="update">
		UPDATE tag
		SET
		content=#{content}
		WHERE code=#{code}
	</update>
</mapper>