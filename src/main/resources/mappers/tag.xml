<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="tag">
	<sql id="search">
		<where>
			<if test="search == 1">
				<!-- 관리자 페이지에서 검색 할 때 사용 -->
				code = #{keyword}
				OR UPPER(content) LIKE CONCAT('%', UPPER(#{keyword}), '%')
			</if>
		</where>
	</sql>

	<insert id="add">
		INSERT INTO tag
		VALUES(NULL, #{content})
	</insert>
	<select id="item" resultType="Tag">
		SELECT *
		FROM tag
		WHERE code=#{code}
	</select>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM tag
		<include refid="search" />
	</select>
	<select id="list" resultType="Tag">
		SELECT *
		FROM tag
		<include refid="search"/>
	</select>
	<delete id="delete">
		DELETE FROM tag
		WHERE code=#{code}
	</delete>
	<update id="update">
		UPDATE tag
		SET
		content=#{content}
		WHERE code=#{code}
	</update>
</mapper>