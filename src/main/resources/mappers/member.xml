<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="member">
	<sql id="search">
		<where>
			<choose>
				<when test="search == 1">
					id=#{keyword}
				</when>
			</choose>
		</where>
	</sql>
	
	<resultMap type="Member" id="MemberMap">
		<id column="id" property="id"/>
		<result column="password" property="password"/>
		<result column="address" property="address"/>
		<result column="name" property="name"/>
		<result column="tel" property="tel"/>
		<result column="grade" property="grade"/>
		<result column="email" property="email"/>
		<collection property="tags" javaType="ArrayList" ofType="MemberTag">
			<id column="mtcode" property="code"/>
			<result column="mtid" property="id"/>
			<result column="tcode" property="tcode"/>
			<result column="recom" property="recom"/>
			<result column="content" property="content"/>
		</collection>
	</resultMap>

	<insert id="add">
		INSERT INTO member
		VALUES(#{id}, PASSWORD(#{password}), #{address}, #{name}, #{tel}, 0, #{email}, NULL)
	</insert>
	<select id="item" resultMap="MemberMap">
		SELECT member.*,
		member_tag.code AS mtcode, member_tag.id AS mtid, member_tag.tcode, member_tag.recom,
		tag.content
		FROM member
		LEFT JOIN member_tag ON member_tag.id=member.id
		LEFT JOIN tag ON tag.code = member_tag.tcode
		WHERE member.id=#{id}
	</select>
	<select id="login" resultType="Member">
		SELECT *
		FROM member
		WHERE id=#{id}
		AND password=PASSWORD(#{password})
	</select>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM member
		<include refid="search" />
	</select>
	<select id="list" resultType="Member">
		SELECT *
		FROM member
		<include refid="search" />
		LIMIT #{offset}, #{perPage}
	</select>
	<delete id="delete">
		DELETE FROM member
		WHERE id=#{id}
	</delete>
	<update id="update">
		UPDATE member
		SET
		address=#{address},
		name=#{name},
		tel=#{tel},
		grade=#{grade},
		email=#{email}
		WHERE id=#{id}
	</update>
	<update id="keep_login">
		UPDATE member
		SET
		session_id=#{sessionId}
		WHERE id=#{id}
	</update>
	<select id="check" resultType="Member">
		SELECT *
		FROM member
		WHERE session_id = #{sessionId}
	</select>
</mapper>