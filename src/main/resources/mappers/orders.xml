<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="orders">
	<sql id="search">
		<where>
			subscribe=#{keyword}
		</where>
	</sql>

	<insert id="add">
		INSERT INTO orders
		VALUES(NULL, #{id}, #{address}, #{name}, #{tel}, NOW(), #{subscribe})
	</insert>
	<select id="item" resultType="Orders">
		SELECT *
		FROM orders
		WHERE code=#{code}
	</select>
	<select id="total" resultType="Integer">
		SELECT COUNT(*)
		FROM orders
		<include refid="search" />
	</select>
	<select id="list" resultType="Orders">
		SELECT *
		FROM orders
		<include refid="search" />
		LIMIT #{offset}, #{perPage}
	</select>
	<delete id="delete">
		DELETE FROM orders
		WHERE code=#{code}
	</delete>
	<update id="update">
		UPDATE orders
		SET
		address=#{address},
		name=#{name},
		tel=#{tel}
		WHERE code=#{code}
	</update>
</mapper>