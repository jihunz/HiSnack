<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration 
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- 이걸로 스네이크 케이스를 캬멜 케이스로 바꿔줌 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>
	<typeAliases>
		<package name="kr.ac.hisnack.model" />
	</typeAliases>
	<!-- alias를 사용할 파일 위치 -->
	<mappers>
		<mapper resource="mappers/member.xml"/>
		<mapper resource="mappers/orders.xml"/>
		<mapper resource="mappers/product.xml"/>
		<mapper resource="mappers/review.xml"/>
		<mapper resource="mappers/product_image.xml"/>
		<mapper resource="mappers/review_image.xml"/>
		<mapper resource="mappers/tag.xml"/>
	</mappers>

</configuration>